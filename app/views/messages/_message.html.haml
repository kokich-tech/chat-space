.Chat-main__message-list__info
  .Chat-main__message-list__info__name
    = message.user.name
  .Chat-main__message-list__info__date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.Chat-main__message-list__message
  - if message.content.present?
    %p.Chat-main__message-list__message__content
      = message.content
  = image_tag message.image.url, class: 'Chat-main__message-list__message__image' if message.image.present?